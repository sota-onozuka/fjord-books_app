<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <%= yield %>

    
<p class="navbar-text pull-right">
  <% if user_signed_in? %>
    <%= t 'layouts.logged_in_as' %> <strong><%= current_user.email %></strong>
    <%= link_to t('layouts.edit_profile'), edit_user_registration_path, class: 'navbar-link' %> |
    <%= link_to t('layouts.logout'), destroy_user_session_path, method: :delete, class: 'navbar-link'  %>
  <% else %>
    <%= link_to t('layouts.sign_up'), new_user_registration_path, class: 'navbar-link'  %> |
    <%= link_to t('layouts.login'), new_user_session_path, class: 'navbar-link'  %>
  <% end %>
</p>
  </body>
</html>
