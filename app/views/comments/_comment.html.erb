<table>
  <thead>
    <tr>
      <th><%= Comment.model_name.human %></th>
      <th><%= User.human_attribute_name(:name) %></th>
      <th><%= t 'views.common.posting_time' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
        <td><%= link_to comment.user.name, comment.user %></td>
        <td><%= comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
      </tr>
    <% end %>
  </tbody>
</table>