<table>
  <thead>
    <tr>
      <th><%= Comment.model_name.human %></th>
      <th><%= User.human_attribute_name(:name) %></th>
      <th><%= t 'views.common.posting_time' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
        <% if comment.user.name == "" %>
          <td><%= link_to comment.user.email, comment.user %></td>
        <% else %>
          <td><%= link_to comment.user.name, comment.user %></td>
        <% end %>
        <td><%= I18n.l(comment.created_at, format: :short) %></td>
      </tr>
    <% end %>
  </tbody>
</table>