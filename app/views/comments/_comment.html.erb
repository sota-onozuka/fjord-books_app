<table>
  <thead>
    <tr>
      <th>コメント</th>
      <th>name</th>
      <th>時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
        <td><%= link_to comment.user.name, comment.user %></td>
        <td><%= comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
      </tr>
    <% end %>
  </tbody>
</table>